@model Pokrocily_zaverecny_projekt.Models.Insurance

@{
    ViewData["Title"] = "Smazat pojistku";
}

<section style="min-height: 500px">
<h4>Smazání pojistky</h4>
<h5>Opravdu chcete smazat?</h5>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Pojistka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceName)
        </dd>
            <dt>
                Pojištěný
            </dt>
            <dd>
                @Html.DisplayFor(model => model.InsuredId)
            </dd>
        <dt class = "col-sm-2">
            Částka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceValue)
        </dd>
        <dt class = "col-sm-2">
            Předmět pojistky
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsurenceObject)
        </dd>
        <dt class = "col-sm-2">
            Datum vzniku
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class = "col-sm-2">
            Datum zániku
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" /> |    
        <input type="button" onclick="history.go(-1)" class="btn btn-primary" value="Zpět" />
    </form>
</div>
</section>