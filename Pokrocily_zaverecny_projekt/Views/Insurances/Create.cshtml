@model Pokrocily_zaverecny_projekt.Models.Insurance

@{
    ViewData["Title"] = "Nové pojištění";
}

<section class="m-5" style="min-height: 500px;">

<h4>Nová pojistka</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row my-3">
                <div class="form-group col">
                    <label asp-for="InsuranceName" class="control-label">Pojistka</label>
                    <input asp-for="InsuranceName" class="form-control" />
                    <span asp-validation-for="InsuranceName" class="text-danger"></span>
                </div>
                    
                <div class="form-group col">
                    <label asp-for="InsuranceValue" class="control-label">Částka</label>
                    <input asp-for="InsuranceValue" class="form-control" />
                    <span asp-validation-for="InsuranceValue" class="text-danger"></span>
                </div>
            </div>
            <div class="row my-3">
                <div class="form-group col">
                    <label asp-for="InsurenceObject" class="control-label">Předmět pojištění</label>
                    <input asp-for="InsurenceObject" class="form-control" />
                    <span asp-validation-for="InsurenceObject" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="DateFrom" class="control-label">Datum vzniku</label>
                    <input asp-for="DateFrom" type="date" class="form-control" />
                    <span asp-validation-for="DateFrom" class="text-danger"></span>
			    </div>
	        </div>
            <div class="row my-3">
                    <div class="form-group col">
                        @Html.LabelFor(model => model.InsuredId, "Pojistěný", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("InsuredId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.InsuredId, "", new { @class = "text-danger" })
                        </div>
                    </div>
            
                <div class="form-group col">
                    <label asp-for="DateTo"  class="control-label">Datum zániku</label>
                    <input asp-for="DateTo" type="date" class="form-control" />
                    <span asp-validation-for="DateTo"  class="text-danger"></span>
                </div>
				</div>
                <div class="form-group">
                    <input type="submit" onclick="history.go(-1)" value="Vytvořit" class="btn btn-success my-3" />
				</div>
		</form>
        
    </div>
</div>


<div class="btn btn-primary text-white">
        <input type="button" onclick="history.go(-1)" value="Zpět" />
</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
