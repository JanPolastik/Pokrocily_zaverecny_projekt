@using Microsoft.AspNetCore.Identity
@model LoginViewModel
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Přihlášení";
}

<section style="min-height: 500px">
    <h2>Přihlášení</h2>
    <div class="d-flex justify-content-center justify-content-lg-start" >
        <div class="row">
            <div class="">
                <form class="d-flex flex-column" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email">Emailová adresa</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Heslo</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                Zapamatuj si mě
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="clanky-tlacitko align-self-start">Přihlásit se</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Registrace</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
