@model IEnumerable<Pokrocily_zaverecny_projekt.Models.Insured>

@{
    ViewData["Title"] = "Evidence pojištěných";
}

<section class="m-5" style="min-height: 500px;">

    <p>
        <a class="btn btn-success" asp-action="Create">Nový pojištěnec</a>
    </p>
    <div class="table-responsive-lg">
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Jméno
                </th>
                <th>
                    Bydliště
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td class="align-middle">
                        <a class="text-white text-decoration-none" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Editovat</a> |
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Odstranit</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
    </div>
</section>