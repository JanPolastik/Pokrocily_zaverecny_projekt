@model Pokrocily_zaverecny_projekt.Models.Insured

@{
    ViewData["Title"] = "Nový pojištěnec";
}
<section class="m-5" style="min-height: 500px;">
<h4>Nový pojištěnec</h4>


<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row my-3">
                <div class="form-group col">
                    <label asp-for="Name" class="control-label">Jméno</label>
                        <input asp-for="Name" class="form-control" placeholder="Jan" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="LastName" class="control-label">Příjmení</label>
                        <input asp-for="LastName" class="form-control" placeholder="Novák" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row my-3">
                <div class="form-group col">
                    <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="jan.novak91@seznam.cz" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="PhoneNumber" class="control-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="723 777 888" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row my-3">
                <div class="form-group col">
                    <label asp-for="Adress" class="control-label">Ulice</label>
                    <input asp-for="Adress" class="form-control" placeholder="Družstevní" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="HouseNumber" class="control-label">Číslo popisné</label>
                        <input asp-for="HouseNumber" class="form-control" placeholder="25" />
                    <span asp-validation-for="HouseNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row my-3">
                <div class="form-group col">
                    <label asp-for="Town" class="control-label">Město</label>
                        <input asp-for="Town" class="form-control" placeholder="Praha 1" />
                    <span asp-validation-for="Town" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="PSC" class="control-label">PSČ</label>
                        <input asp-for="PSC" class="form-control" placeholder="598 45" />
                    <span asp-validation-for="PSC" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2 mb-1">
                <input type="submit" value="Potvrdit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Zpět</a>
</div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
