@model Pokrocily_zaverecny_projekt.Models.Insured

@{
    ViewData["Title"] = "Smazat";
}
<section style="min-height: 500px">
<h4>Smazání pojištěného</h4>

<h5>Opravdu chcete smazat pojištěného?</h5>
<div>
   
    
    <dl class="row border-1">
        <dt class = "col-sm-2">
           Jméno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Jmeno)
        </dd>
            <dt class="col-sm-2">
                Příjmení
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prijmeni)
            </dd>
        <dt class = "col-sm-2">
            Bydliště
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Adresa) @Html.DisplayFor(model => model.CisloDomu)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" /> |
            <a class="btn btn-primary" asp-action="Index">Zpět</a>
    </form>
</div>
</section>