@using System.Security.Claims;
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="JaPo" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~images/ikona.ico"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</head>
<body class="pozadi">
    <header class="mb-5 sticky-md-top">
		<nav id="navigacni" class="navbar navbar-expand-lg navbar-light">
			<img src="~/images/logo.png" width="60" height="50" class="d-inline-block " />
            <div class="container-fluid">
                
                <ul id="navigacni-tlacitka" class="nav nav-pills ">
                    <li class="nav-item ">
                        <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Úvod</a>
                    </li>
                    <li class="nav-item ">
                        <a class="btn btn-dark mx-1" asp-controller="Insureds" asp-action="Index">Pojištěnci</a>
                    </li>
                    <li class="nav-item ">
                        <a class="btn btn-dark" asp-controller="Insurances" asp-action="Index">Pojištění</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-dark mx-1" asp-controller="Home" asp-action="Events">Události</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-dark " asp-controller="Home" asp-action="About">O aplikaci</a>
                    </li>
                </ul>
                <div id="prihlaseni" class="align-items-end">
				    <partial name="_LoginPartial" />
			    </div>
            </div>
        </nav>
        
    </header>
    <div class="m-5" >
                
    
                @RenderBody()
   
    </div>
    <footer class="bd-footer py-1 py-md-2 mt-5 bg-body-tertiary">
        <div class="container  px-4 px-md-3">
            <p>Vytvořil &copyJaPo 2023 </p>
		</div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
