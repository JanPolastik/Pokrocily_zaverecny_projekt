
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="JaPo" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~images/ikona.ico"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body class="pozadi">
    <header class="mb-5">
        <nav id="navigacni" class="navbar navbar-expand-lg navbar-light ">
            <img src="images/logo.png" width="60" height="50" class="d-inline-block align-top" />
            <ul class="nav nav-tabs ">
                <li class="nav-item ">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Úvod</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-dark" asp-controller="Insureds" asp-action="Index">Pojištěnci</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-dark " asp-controller="Insurances" asp-action="Index">Pojištění</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Events">Události</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark " asp-controller="Home" asp-action="About">O aplikaci</a>
                </li>
            </ul>
            <partial name="_LoginPartial" />
        </nav>
        
    </header>
            <div>
                
    
                @RenderBody()
   
            </div>
    <footer>
        <div class="d-flex w-100 p-3 align-items-center justify-content-center position-relative bottom-0" style="height:50px; width: 100%;">
            <p>Vytvořil &copyJaPo 2023 </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
